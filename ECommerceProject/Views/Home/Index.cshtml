@{
    ViewData["Title"] = "Home";
    var featuredProducts = ViewBag.FeaturedProducts as List<ECommerceProject.Models.Entities.Product>;
    var categories = ViewBag.Categories as List<ECommerceProject.Models.Entities.Category>;
}

<!-- Hero Section -->
<div class="hero-section text-white animate-fade-in">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold mb-4">Welcome to Our Store</h1>
                <p class="lead mb-4">Discover amazing products at unbeatable prices. Shop now and enjoy free shipping on
                    orders over $50!</p>
                    <div class="d-flex gap-3">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg">
                            <i class="bi bi-bag-fill me-2"></i>Shop Now
                        </a>
                        <a href="#categories" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-grid-3x3-gap-fill me-2"></i>Browse Categories
                        </a>
                    </div>
                </div>
                <div class="col-md-6 text-center d-none d-md-block">
                    <i class="bi bi-shop-window" style="font-size: 15rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container my-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <i class="bi bi-truck text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Free Shipping</h5>
                        <p class="card-text text-muted">On orders over $50</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Secure Payment</h5>
                        <p class="card-text text-muted">100% secure transactions</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <i class="bi bi-arrow-clockwise text-warning" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Easy Returns</h5>
                        <p class="card-text text-muted">30-day return policy</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Section -->
    @if (categories != null && categories.Any())
    {
        <div class="container my-5" id="categories">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">Shop by Category</h2>
                <p class="text-muted">Explore our wide range of product categories</p>
            </div>
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 g-4">
                @foreach (var category in categories)
                {
                    <div class="col animate-fade-in">
                        <a asp-controller="Products" asp-action="ByCategory" asp-route-id="@category.Id"
                               class="text-decoration-none">
                            <div class="category-card">
                                <i class="bi bi-tag-fill text-primary"></i>
                                <h6 class="mt-2 mb-0">@category.Name</h6>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Featured Products Section -->
    @if (featuredProducts != null && featuredProducts.Any())
    {
        <div class="container my-5">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">Featured Products</h2>
                <p class="text-muted">Check out our most popular items</p>
            </div>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                @foreach (var product in featuredProducts)
                {
                    <div class="col animate-fade-in">
                        <div class="product-card card h-100 shadow-sm">
                            <span class="badge bg-danger">Featured</span>
                            <div class="overflow-hidden">
                                <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=400" : product.ImageUrl)"
                                     class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-muted flex-grow-1">
                                    @(product.Description?.Length > 60 ? product.Description.Substring(0, 60) + "..." :
                            product.Description)
                                </p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="product-price">@product.Price.ToString("C")</span>
                                    @if (product.Stock > 0)
                                    {
                                        <span class="badge bg-success">In Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Sold Out</span>
                                    }
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-0 pb-3">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id"
                                       class="btn btn-primary w-100">
                                    <i class="bi bi-eye me-2"></i>View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-5">
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    View All Products <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    }

    <!-- Newsletter Section -->
    <div class="container my-5">
        <div class="card border-0 shadow-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="card-body p-5 text-white text-center">
                <h3 class="fw-bold mb-3">Subscribe to Our Newsletter</h3>
                <p class="mb-4">Get the latest updates on new products and exclusive offers!</p>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="input-group input-group-lg">
                            <input type="email" class="form-control" placeholder="Enter your email">
                            <button class="btn btn-light" type="button">
                                <i class="bi bi-send-fill me-2"></i>Subscribe
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>