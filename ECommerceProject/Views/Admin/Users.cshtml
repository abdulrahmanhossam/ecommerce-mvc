@model IEnumerable<ECommerceProject.Models.Entities.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
    var usersWithRoles = ViewBag.UsersWithRoles as List<(ECommerceProject.Models.Entities.ApplicationUser User, IList<string> Roles, int OrderCount)>;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people"></i> Manage Users</h2>
        <div>
            <span class="badge bg-primary">Total: @Model.Count()</span>
            <span class="badge bg-success">Active: @Model.Count(u => !u.LockoutEnd.HasValue)</span>
            <span class="badge bg-danger">Inactive: @Model.Count(u => u.LockoutEnd.HasValue)</span>
        </div>
    </div>

    @if (usersWithRoles != null && usersWithRoles.Any())
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Role</th>
                                <th>Orders</th>
                                <th>Joined</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in usersWithRoles)
                            {
                                var user = item.User;
                                var roles = item.Roles;
                                var orderCount = item.OrderCount;
                                var isActive = !user.LockoutEnd.HasValue;

                                <tr class="@(!isActive ? "table-secondary" : "")">
                                    <td>
                                        <strong>@user.FullName</strong>
                                        @if (!isActive)
                                        {
                                            <span class="badge bg-secondary ms-1">Locked</span>
                                        }
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>
                                        @if (roles.Any())
                                        {
                                            foreach (var role in roles)
                                            {
                                                var roleClass = role switch
                                                {
                                                    "Admin" => "bg-danger",
                                                    "Seller" => "bg-warning",
                                                    _ => "bg-primary"
                                                };
                                                <span class="badge @roleClass">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No Role</span>
                                        }
                                    </td>
                                    <td>
                                        @if (orderCount > 0)
                                        {
                                            <span class="badge bg-info">@orderCount Orders</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@user.CreatedDate.ToString("dd MMM yyyy")</small>
                                    </td>
                                    <td>
                                        @if (isActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!roles.Contains("Admin"))
                                        {
                                            <div class="btn-group" role="group">
                                                <form asp-action="ToggleUserStatus" asp-route-userId="@user.Id" 
                                                      method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-@(isActive ? "warning" : "success")" 
                                                            title="@(isActive ? "Deactivate" : "Activate")">
                                                        <i class="bi bi-@(isActive ? "lock" : "unlock")"></i>
                                                    </button>
                                                </form>

                                                <form asp-action="DeleteUser" asp-route-userId="@user.Id" 
                                                      method="post" class="d-inline"
                                                      onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Admin</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 5rem; color: #ccc;"></i>
            <h3 class="mt-3">No Users Found</h3>
        </div>
    }
</div>