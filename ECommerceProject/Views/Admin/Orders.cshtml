@model IEnumerable<ECommerceProject.Models.Entities.Order>
@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-cart-check"></i> Manage Orders
    </h2>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Payment</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>#@order.Id</strong></td>
                                <td>User @order.UserId.Substring(0, 8)...</td>
                                <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                                <td><strong>@order.TotalAmount.ToString("C")</strong></td>
                                <td>
                                    <small>@order.PaymentMethod</small>
                                </td>
                                <td>
                                    @{
                                        var statusClass = order.Status switch
                                        {
                                            ECommerceProject.Models.Enums.OrderStatus.Pending => "bg-warning",
                                            ECommerceProject.Models.Enums.OrderStatus.Paid => "bg-info",
                                            ECommerceProject.Models.Enums.OrderStatus.Processing => "bg-primary",
                                            ECommerceProject.Models.Enums.OrderStatus.Shipped => "bg-secondary",
                                            ECommerceProject.Models.Enums.OrderStatus.Delivered => "bg-success",
                                            ECommerceProject.Models.Enums.OrderStatus.Cancelled => "bg-danger",
                                            _ => "bg-dark"
                                        };
                                    }
                                    <span class="badge @statusClass">@order.Status</span>
                                </td>
                                <td>
                                    <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>