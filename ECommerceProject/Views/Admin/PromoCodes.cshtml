@model IEnumerable<ECommerceProject.Models.Entities.PromoCode>
@{
    ViewData["Title"] = "Manage Promo Codes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-ticket-perforated"></i> Manage Promo Codes</h2>
        <a asp-action="CreatePromoCode" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Promo Code
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Type</th>
                                <th>Value</th>
                                <th>Min Purchase</th>
                                <th>Usage</th>
                                <th>Valid Until</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var promo in Model)
                            {
                                <tr>
                                    <td><strong>@promo.Code</strong></td>
                                    <td>
                                        @if (promo.DiscountType == ECommerceProject.Models.Enums.DiscountType.Percentage)
                                        {
                                            <span class="badge bg-info">Percentage</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">Fixed</span>
                                        }
                                    </td>
                                    <td>
                                        @if (promo.DiscountType == ECommerceProject.Models.Enums.DiscountType.Percentage)
                                        {
                                            <strong>@promo.DiscountValue%</strong>
                                        }
                                        else
                                        {
                                            <strong>@promo.DiscountValue.ToString("C")</strong>
                                        }
                                    </td>
                                    <td>@(promo.MinimumPurchase?.ToString("C") ?? "N/A")</td>
                                    <td>
                                        <small>
                                            @promo.UsageCount / @(promo.UsageLimit?.ToString() ?? "âˆž")
                                        </small>
                                    </td>
                                    <td>
                                        @if (promo.EndDate.HasValue)
                                        {
                                            <small>@promo.EndDate.Value.ToString("dd MMM yyyy")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Expiry</span>
                                        }
                                    </td>
                                    <td>
                                        @if (promo.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <form asp-action="TogglePromoCodeStatus" asp-route-id="@promo.Id" 
                                                  method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-@(promo.IsActive ? "warning" : "success")">
                                                    <i class="bi bi-@(promo.IsActive ? "pause" : "play")"></i>
                                                </button>
                                            </form>

                                            <form asp-action="DeletePromoCode" asp-route-id="@promo.Id" 
                                                  method="post" class="d-inline"
                                                  onsubmit="return confirm('Are you sure?');">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 5rem; color: #ccc;"></i>
            <h3 class="mt-3">No Promo Codes Yet</h3>
            <p class="text-muted">Create your first promo code to offer discounts.</p>
            <a asp-action="CreatePromoCode" class="btn btn-success mt-3">
                <i class="bi bi-plus-circle"></i> Create Promo Code
            </a>
        </div>
    }
</div>