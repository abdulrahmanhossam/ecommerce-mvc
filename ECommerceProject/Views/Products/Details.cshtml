@model ECommerceProject.Models.Entities.Product
@{
    ViewData["Title"] = Model.Name;
    var variants = ViewBag.ProductVariants as List<ECommerceProject.Models.Entities.ProductVariant>;
    var relatedProducts = ViewBag.RelatedProducts as List<ECommerceProject.Models.Entities.Product>;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Product Image -->
        <div class="col-md-5">
            <div class="card">
                <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/no-image.jpg" : Model.ImageUrl)" 
                     class="card-img-top" alt="@Model.Name">
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-md-7">
            <h2>@Model.Name</h2>
            
            @if (Model.IsFeatured)
            {
                <span class="badge bg-danger mb-2">Featured Product</span>
            }
            
            <div class="mb-3">
                <span class="text-muted">Category: </span>
                <a asp-action="ByCategory" asp-route-id="@Model.CategoryId" class="text-decoration-none">
                    @Model.Category?.Name
                </a>
            </div>

            <h3 class="text-primary mb-3">@Model.Price.ToString("C")</h3>

            <div class="mb-4">
                <h5>Description</h5>
                <p>@Model.Description</p>
            </div>

            <div class="mb-3">
                <strong>Availability: </strong>
                @if (Model.Stock > 0)
                {
                    <span class="badge bg-success">In Stock (@Model.Stock units available)</span>
                }
                else
                {
                    <span class="badge bg-danger">Out of Stock</span>
                }
            </div>

            <!-- Product Variants -->
            @if (variants != null && variants.Any())
            {
                <div class="mb-3">
                    <h5>Available Options</h5>
                    <div class="row">
                        @foreach (var variant in variants)
                        {
                            <div class="col-md-6 mb-2">
                                <div class="card">
                                    <div class="card-body">
                                        @if (!string.IsNullOrEmpty(variant.Size))
                                        {
                                            <div><strong>Size:</strong> @variant.Size</div>
                                        }
                                        @if (!string.IsNullOrEmpty(variant.Color))
                                        {
                                            <div><strong>Color:</strong> @variant.Color</div>
                                        }
                                        @if (variant.AdditionalPrice > 0)
                                        {
                                            <div><strong>Additional Price:</strong> +@variant.AdditionalPrice.ToString("C")</div>
                                        }
                                        <div><strong>Stock:</strong> @variant.Stock units</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Add to Cart Form -->
            @if (User.Identity?.IsAuthenticated == true && Model.Stock > 0)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Quantity</label>
                            <input type="number" name="quantity" class="form-control" 
                                   value="1" min="1" max="@Model.Stock" required>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </div>
                </form>
            }
            else if (User.Identity?.IsAuthenticated != true)
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> 
                    Please <a asp-controller="Account" asp-action="Login" class="alert-link">login</a> 
                    to add products to cart.
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <i class="bi bi-x-circle"></i> This product is currently out of stock.
                </div>
            }
        </div>
    </div>
<!-- Reviews Section -->
<div class="row mt-5">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-star-fill"></i> Customer Reviews
                </h4>
            </div>
            <div class="card-body">
                @if (ViewBag.TotalReviews > 0)
                {
                    <!-- Rating Summary -->
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <h1 class="display-3 mb-0">@ViewBag.AverageRating.ToString("F1")</h1>
                            <div class="mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Round((double)ViewBag.AverageRating))
                                    {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-warning"></i>
                                    }
                                }
                            </div>
                            <p class="text-muted">Based on @ViewBag.TotalReviews reviews</p>
                        </div>

                        <div class="col-md-8">
                            <!-- Rating Breakdown -->
                            <div class="mb-2">
                                <div class="d-flex align-items-center">
                                    <span class="me-2">5 ⭐</span>
                                    <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                        <div class="progress-bar bg-warning" 
                                             style="width: @((ViewBag.FiveStars / (double)ViewBag.TotalReviews * 100))%"></div>
                                    </div>
                                    <span class="text-muted">@ViewBag.FiveStars</span>
                                </div>
                            </div>
                            <div class="mb-2">
                                <div class="d-flex align-items-center">
                                    <span class="me-2">4 ⭐</span>
                                    <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                        <div class="progress-bar bg-warning" 
                                             style="width: @((ViewBag.FourStars / (double)ViewBag.TotalReviews * 100))%"></div>
                                    </div>
                                    <span class="text-muted">@ViewBag.FourStars</span>
                                </div>
                            </div>
                            <div class="mb-2">
                                <div class="d-flex align-items-center">
                                    <span class="me-2">3 ⭐</span>
                                    <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                        <div class="progress-bar bg-warning" 
                                             style="width: @((ViewBag.ThreeStars / (double)ViewBag.TotalReviews * 100))%"></div>
                                    </div>
                                    <span class="text-muted">@ViewBag.ThreeStars</span>
                                </div>
                            </div>
                            <div class="mb-2">
                                <div class="d-flex align-items-center">
                                    <span class="me-2">2 ⭐</span>
                                    <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                        <div class="progress-bar bg-warning" 
                                             style="width: @((ViewBag.TwoStars / (double)ViewBag.TotalReviews * 100))%"></div>
                                    </div>
                                    <span class="text-muted">@ViewBag.TwoStars</span>
                                </div>
                            </div>
                            <div class="mb-2">
                                <div class="d-flex align-items-center">
                                    <span class="me-2">1 ⭐</span>
                                    <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                        <div class="progress-bar bg-warning" 
                                             style="width: @((ViewBag.OneStar / (double)ViewBag.TotalReviews * 100))%"></div>
                                    </div>
                                    <span class="text-muted">@ViewBag.OneStar</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>
                }

                <!-- Add Review Form -->
                @if (User.Identity!.IsAuthenticated)
                {
                    @if (!ViewBag.HasReviewed)
                    {
                        <div class="mb-4">
                            <h5>Write a Review</h5>
                            <form asp-controller="Products" asp-action="AddReview" method="post">
                                <input type="hidden" name="ProductId" value="@Model.Id" />
                                
                                <div class="mb-3">
                                    <label class="form-label">Rating</label>
                                    <div class="rating-input">
                                        @for (int i = 5; i >= 1; i--)
                                        {
                                            <input type="radio" name="Rating" value="@i" id="star@(i)" required />
                                            <label for="star@(i)">⭐</label>
                                        }
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="Title" class="form-label">Review Title (Optional)</label>
                                    <input type="text" name="Title" class="form-control" 
                                           placeholder="Summarize your experience" maxlength="100" />
                                </div>

                                <div class="mb-3">
                                    <label for="Comment" class="form-label">Your Review</label>
                                    <textarea name="Comment" class="form-control" rows="4" 
                                              placeholder="Share your thoughts about this product" 
                                              required minlength="10" maxlength="2000"></textarea>
                                </div>

                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send"></i> Submit Review
                                </button>
                            </form>
                        </div>
                        <hr>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> You have already reviewed this product.
                        </div>
                        <hr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> 
                        Please <a asp-controller="Account" asp-action="Login" class="alert-link">login</a> to write a review.
                    </div>
                    <hr>
                }

                <!-- Reviews List -->
                @if (ViewBag.Reviews != null)
                {
                    var reviews = ViewBag.Reviews as List<ECommerceProject.Models.Entities.ProductReview>;
                    
                    if (reviews != null && reviews.Any())
                    {
                        <h5 class="mb-3">Customer Reviews (@reviews.Count)</h5>
                        
                        @foreach (var review in reviews)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <div class="mb-1">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= review.Rating)
                                                    {
                                                        <i class="bi bi-star-fill text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star text-warning"></i>
                                                    }
                                                }
                                            </div>
                                            @if (!string.IsNullOrEmpty(review.Title))
                                            {
                                                <h6 class="mb-1">@review.Title</h6>
                                            }
                                        </div>
                                        <small class="text-muted">@review.CreatedDate.ToString("dd MMM yyyy")</small>
                                    </div>

                                    <p class="mb-2">@review.Comment</p>

                                    <div class="d-flex align-items-center text-muted small">
                                        <span class="me-3">
                                            <strong>@review.User?.FullName</strong>
                                            @if (review.IsVerifiedPurchase)
                                            {
                                                <span class="badge bg-success ms-1">✓ Verified Purchase</span>
                                            }
                                        </span>

                                        @if (User.Identity!.IsAuthenticated)
                                        {
                                            <button class="btn btn-sm btn-outline-secondary me-2" 
                                                    onclick="markHelpful(@review.Id, true)">
                                                <i class="bi bi-hand-thumbs-up"></i> 
                                                Helpful (<span id="helpful-@review.Id">@review.HelpfulCount</span>)
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary" 
                                                    onclick="markHelpful(@review.Id, false)">
                                                <i class="bi bi-hand-thumbs-down"></i> 
                                                Not Helpful (<span id="nothelpful-@review.Id">@review.NotHelpfulCount</span>)
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>
    <!-- Related Products -->
    @if (relatedProducts != null && relatedProducts.Any())
    {
        <div class="mt-5">
            <h4 class="mb-3">Related Products</h4>
            <div class="row row-cols-1 row-cols-md-4 g-4">
                @foreach (var relatedProduct in relatedProducts)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="@(string.IsNullOrEmpty(relatedProduct.ImageUrl) ? "/images/no-image.jpg" : relatedProduct.ImageUrl)" 
                                 class="card-img-top" alt="@relatedProduct.Name" style="height: 150px; object-fit: cover;">
                            <div class="card-body">
                                <h6 class="card-title">@relatedProduct.Name</h6>
                                <p class="text-primary">@relatedProduct.Price.ToString("C")</p>
                            </div>
                            <div class="card-footer bg-transparent">
                                <a asp-action="Details" asp-route-id="@relatedProduct.Id" 
                                   class="btn btn-sm btn-outline-primary w-100">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    @section Scripts {
<script>
function markHelpful(reviewId, helpful) {
    fetch('/Products/MarkHelpful', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
        },
        body: JSON.stringify({ reviewId: reviewId, helpful: helpful })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            document.getElementById('helpful-' + reviewId).textContent = data.helpfulCount;
            document.getElementById('nothelpful-' + reviewId).textContent = data.notHelpfulCount;
        }
    })
    .catch(error => console.error('Error:', error));
}
</script>
}
</div>