@model IEnumerable<ECommerceProject.Models.Entities.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-box-seam"></i> My Orders
    </h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-12 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <!-- Order Info -->
                                <div class="col-md-3">
                                    <h6 class="mb-1">Order #@order.Id</h6>
                                    <small class="text-muted">@order.OrderDate.ToString("dd MMM yyyy")</small>
                                </div>

                                <!-- Status -->
                                <div class="col-md-2 text-center">
                                    @{
                                        var statusClass = order.Status switch
                                        {
                                            ECommerceProject.Models.Enums.OrderStatus.Pending => "bg-warning",
                                            ECommerceProject.Models.Enums.OrderStatus.Paid => "bg-info",
                                            ECommerceProject.Models.Enums.OrderStatus.Processing => "bg-primary",
                                            ECommerceProject.Models.Enums.OrderStatus.Shipped => "bg-secondary",
                                            ECommerceProject.Models.Enums.OrderStatus.Delivered => "bg-success",
                                            ECommerceProject.Models.Enums.OrderStatus.Cancelled => "bg-danger",
                                            _ => "bg-dark"
                                        };
                                    }
                                    <span class="badge @statusClass">@order.Status</span>
                                </div>

                                <!-- Payment Method -->
                                <div class="col-md-2 text-center">
                                    <small class="text-muted">Payment</small><br>
                                    <strong>@order.PaymentMethod</strong>
                                </div>

                                <!-- Total -->
                                <div class="col-md-2 text-center">
                                    <small class="text-muted">Total</small><br>
                                    <strong class="text-primary h5">@order.TotalAmount.ToString("C")</strong>
                                </div>

                                <!-- Shipping Info -->
                                <div class="col-md-2">
                                    <small class="text-muted">Ship to:</small><br>
                                    <strong>@order.City, @order.Country</strong>
                                </div>

                                <!-- Actions -->
                                <div class="col-md-1 text-end">
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 5rem; color: #ccc;"></i>
            <h3 class="mt-3">No orders yet</h3>
            <p class="text-muted">You haven't placed any orders yet.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-3">
                <i class="bi bi-bag"></i> Start Shopping
            </a>
        </div>
    }
</div>