@model ECommerceProject.Models.Entities.Order
@{
    ViewData["Title"] = $"Order #{Model.Id}";
    var orderItems = ViewBag.OrderItems as List<(ECommerceProject.Models.Entities.OrderItem Item,
ECommerceProject.Models.Entities.Product Product)>;
    var payment = ViewBag.Payment as ECommerceProject.Models.Entities.Payment;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="MyOrders">My Orders</a></li>
            <li class="breadcrumb-item active">Order #@Model.Id</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-receipt"></i> Order #@Model.Id</h2>
        @{
            var statusClass = Model.Status switch
            {
                ECommerceProject.Models.Enums.OrderStatus.Pending => "bg-warning",
                ECommerceProject.Models.Enums.OrderStatus.Paid => "bg-info",
                ECommerceProject.Models.Enums.OrderStatus.Processing => "bg-primary",
                ECommerceProject.Models.Enums.OrderStatus.Shipped => "bg-secondary",
                ECommerceProject.Models.Enums.OrderStatus.Delivered => "bg-success",
                ECommerceProject.Models.Enums.OrderStatus.Cancelled => "bg-danger",
                _ => "bg-dark"
            };
        }
        <span class="badge @statusClass fs-6">@Model.Status</span>
    </div>

    <div class="row">
        <!-- Order Details -->
        <div class="col-lg-8">
            <!-- Order Info -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Order Date:</strong><br>
                            <span class="text-muted">@Model.OrderDate.ToString("dd MMMM yyyy, hh:mm tt")</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Payment Method:</strong><br>
                            <span class="text-muted">@Model.PaymentMethod</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong>Shipping Address:</strong><br>
                        <span class="text-muted">
                            @Model.ShippingAddress<br>
                            @Model.City, @Model.Country<br>
                            Phone: @Model.PhoneNumber
                        </span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div>
                            <strong>Notes:</strong><br>
                            <span class="text-muted">@Model.Notes</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Order Items -->
            @if (orderItems != null && orderItems.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">Order Items</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var orderItem in orderItems)
                        {
                            <div class="row align-items-center border-bottom pb-3 mb-3">
                                <div class="col-md-2">
                                    <img src="@(string.IsNullOrEmpty(orderItem.Product.ImageUrl) ? "https://via.placeholder.com/80" : orderItem.Product.ImageUrl)"
                                         class="img-fluid rounded" alt="@orderItem.Product.Name">
                                </div>
                                <div class="col-md-5">
                                    <h6>@orderItem.Product.Name</h6>
                                    <p class="text-muted mb-0">@orderItem.Item.UnitPrice.ToString("C") each</p>
                                </div>
                                <div class="col-md-2 text-center">
                                    <strong>Qty: @orderItem.Item.Quantity</strong>
                                </div>
                                <div class="col-md-3 text-end">
                                    <h5 class="text-primary mb-0">@orderItem.Item.TotalPrice.ToString("C")</h5>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Summary & Payment -->
        <div class="col-lg-4">
            <!-- Order Summary -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <strong>@((Model.TotalAmount / 1.14m).ToString("C"))</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax (14%):</span>
                        <strong>@((Model.TotalAmount - (Model.TotalAmount / 1.14m)).ToString("C"))</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping:</span>
                        <strong class="text-success">Free</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong class="h5">Total:</strong>
                        <strong class="h4 text-primary">@Model.TotalAmount.ToString("C")</strong>
                    </div>
                </div>
            </div>

            <!-- Payment Info -->
            @if (payment != null)
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Payment Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <strong>Status:</strong><br>
                            <span
                                class="badge bg-@(payment.Status == ECommerceProject.Models.Enums.PaymentStatus.Completed ? "success" : "warning")">
                                @payment.Status
                            </span>
                        </div>
                        <div class="mb-2">
                            <strong>Transaction ID:</strong><br>
                            <small class="text-muted">@payment.TransactionId</small>
                        </div>
                        <div>
                            <strong>Payment Date:</strong><br>
                            <small class="text-muted">@payment.PaymentDate.ToString("dd MMM yyyy, hh:mm tt")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="MyOrders" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Back to My Orders
        </a>
    </div>
</div>